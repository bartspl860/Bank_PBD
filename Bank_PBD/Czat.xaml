        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_PBD"
        mc:Ignorable="d"
        Title="Czat" Height="350" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbxMessageContent" HorizontalAlignment="Left" Margin="10,7,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="392" Height="33"/>
        <Button x:Name="btnSendMessage" Content="Wyślij" HorizontalAlignment="Left" Margin="402,7,0,0" Grid.Row="1" VerticalAlignment="Top" Height="33" Width="38"/>
        <ListBox x:Name="lbxChatContent" Margin="10,10,10,10">
            
        </ListBox>
    </Grid>
</Window>
