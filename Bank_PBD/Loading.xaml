<Window x:Class="Bank_PBD.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_PBD"
        mc:Ignorable="d"
        Title="Loading" Height="30" Width="200" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen">
	<Grid>
		<ProgressBar x:Name="pbLoading" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="200" Orientation="Horizontal" SmallChange="0.5" IsEnabled="False" IsIndeterminate="True" Opacity="0.5"/>
        <Label x:Name="lblContent" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
