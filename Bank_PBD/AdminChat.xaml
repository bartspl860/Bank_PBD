<Window x:Class="Bank_PBD.AdminChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_PBD"
        mc:Ignorable="d"
        Title="Window1" Height="425" Width="450
        " ResizeMode="NoResize">
    <Grid>
        <ListBox x:Name="lbxClients" d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="lbxClients_MouseDoubleClick" Margin="0,0,299,0" Height="338" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxMessagesContent" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Margin="151,0,0,0" Width="299" Height="338" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxSendMessage" Margin="0,338,71,0" TextWrapping="NoWrap" VerticalAlignment="Top" Height="46"/>
        <Button x:Name="btnSend" Content="Send" Margin="0,338,0,0" Click="btnSend_Click" HorizontalAlignment="Right" Width="71" Height="46" VerticalAlignment="Top"/>

    </Grid>
</Window>
